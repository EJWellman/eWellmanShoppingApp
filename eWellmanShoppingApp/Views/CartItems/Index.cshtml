@model IEnumerable<eWellmanShoppingApp.Models.CodeFirst.CartItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            Item Name
        </th>
        <th>
            Price
        </th>
        <th>
            Count
        </th>
		<th>
			Total Price
		</th>
        <th></th>
    </tr>

@foreach (var item in ViewBag.itemsInCart) {
    <tr>
        <td>
			<img src="@item.item.mediaURL" style="width:125px; height:125px;"/>
        </td>
        <td>
			@item.item.name
        </td>
        <td>
            @item.item.price
        </td>
        <td>
            @item.count
        </td>
		<td>
			@item.unitTotal
		</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Remove from Cart", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
