@model IEnumerable<eWellmanShoppingApp.Models.CodeFirst.Order>
@using System.linq;

@{
    ViewBag.Title = "Past Orders";
}

<h2>Past Orders</h2>

<ul class="collapsible popout" data-collapsible="accordion">
	@foreach (var order in ViewBag.pastOrders) {
		<li>
			<div class="collapsible-header"><i class="material-icons">dehaze</i> Order placed on: @order.orderDate</div>
			<div class="collapsible-body">
				<table class="striped">
					<thead>
						<tr>
							<th></th>
							<th>Product Name</th>
							<th>Price</th>
							<th>Quantity</th>
							<th>Total Price</th>
						</tr>
					</thead>
					<tbody>
						@ViewBag.pastOrders.orderItems
						@foreach(var item in order) {
							<tr>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</li>
	}
</ul>

