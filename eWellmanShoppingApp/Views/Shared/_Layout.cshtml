<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erics Helmets - @ViewBag.Title</title>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href="~/Assets/styles/css/materialize.css" rel="stylesheet" />
	<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
	@*<script type="text/javascript" src="~/Assets/Scripts/jquery-3.2.1.js"></script>*@
	<script type="text/javascript" src="~/Assets/Scripts/materialize.js"></script>
	<style>
		ul.dropdown-content.select-dropdown li span {
			color: #000; /* no need for !important :) */
		}
	</style>
</head>
<body>
	<!--Nav Bar-->
	<header>
		<ul class="dropdown-content grey darken-2 z-depth-5" id="dropdownParts">
			<li><a href="#">Rivets</a></li>
			<li><a href="#">Liners</a></li>
			<li><a href="#">Straps</a></li>
		</ul>
		@if (User.IsInRole("Admin")) {
		<ul class="dropdown-content grey darken-2 z-depth-5" id="adminDrop">
			<li>@Html.ActionLink("Item Controls", "../Items/ItemAdd")</li>
		</ul>
		}
		<div class="navbar-fixed">
			<nav>
				<div class="nav-wrapper grey darken-3">
					<a href="#" data-activates="sideNav" class="button-collapse"><i class="material-icons">menu</i></a>
					<ul id="nav-mobile" class="left hide-on-med-and-down">
						<li><a href="@Url.Action("Index","Home")">Home</a></li>
						<li><a href="@Url.Action("Index","Items")">Items</a></li>
						<li><a class="dropdown-button" href="#" data-activates="dropdownParts">Parts<i class="material-icons right">arrow_drop_down</i></a></li>
						@if (User.IsInRole("Admin")) {  //Only shows up if logged in user is part of the Admin group.
							<li><a class="dropdown-button" href="#" data-activates="adminDrop">Admin Options<i class="material-icons right">arrow_drop_down</i></a></li>
						}
					</ul>
					@Html.Partial("_LoginPartial")
				</div>
			</nav>
		</div>
		<ul class="side-nav" id="sideNav">
			<li><a href="@Url.Action("Index","Home")">Home</a></li>
			<li><a href="@Url.Action("Index","Items")">Items</a></li>
			<li class="divider"></li>
			<li><a href="#">Rivets</a></li>
			<li><a href="#">Liners</a></li>
			<li><a href="#">Straps</a></li>
			@if (User.IsInRole("Admin")) {
				<li class="divider"></li>
				<li>Admin Options</li>
				<li class="divider"></li>
				<li>@Html.ActionLink("Item Controls", "../Items/ItemAdd")</li>
			}
			@if (Request.IsAuthenticated) {
				<li class="divider"></li>
				<li><a href="@Url.Action("Index","CartItems")" class="valign-wrapper">@if (ViewBag.itemsInCart.Count > 0) { @ViewBag.itemsInCart.Count}<i style="display:inline" class="material-icons">shopping_cart</i></a></li>
			}
			<li class="divider"></li>
			<li><a href="@Url.Action("Login","Account")">Login</a></li>
		</ul>
	</header>
	<!--Body Content-->
	<main class="brown lighten-4">
		<div class="container">
			<div class="row valign-wrapper">
				<div class="col s12" style="max-width:1280px;">
					@RenderBody()
				</div>
			</div>
		</div>
	</main>
		
	<!--Footer Modal -->
	<div id="footerModal" class="modal bottom-sheet">
		<div class="modal-content grey darken-3">
			<ul class="collapsible" data-collapsible="accordian">
				<li>
					<div class="collapsible-header grey darken-2 white-text"><i class="material-icons">info</i>Company Information</div>
					<div class="collapsible-body white-text">
						<div class="container">
							<div class="row">
								<div class="col l4 s12 center">
									<h5>About</h5>
									<p><a href="#">About Us</a></p>
									<p><a href="#">Careers with Us</a></p>
									<p><a href="#">Support</a></p>
									<p><a href="#">Shipment</a></p>
									<p><a href="#">Gift Card</a></p>
								</div>
								<div class="col l4 s12 center">
									<h5 class="white-text">Store</h5>
									<p class="white-text"><i class="material-icons">home</i>Company Name</p>
									<p><i class="material-icons">phone</i>0044123123</p>
									<p><i class="material-icons">email</i>ex@mail.com</p>
									<h5>We accept</h5>
									<p><i class="material-icons">credit_card</i>Credit Card</p>
								</div>
								<div class="col l4 s12 center">
									<h5>Send us a message!</h5>
									<input placeholder="Name" id="custName" type="text" class="validate" />
									<input placeholder="Email" id="custEmail" type="email" class="validate" />
									<div class="input-field col s12">
										<textarea id="custMessage" class="materialize-textarea" data-length="220"></textarea>
										<label for="custMessage">Type your message here, press Enter to send.</label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</li>
				<!--Map goes here-->
				<li>
					<div class="collapsible-header grey darken-2 white-text"><i class="material-icons">map</i>Find Us!</div>
					<div class="collapsible-body">
						<div class="row">
							<div class="col s12 center">
								<div>
									<iframe frameborder="0" style="border:0; width:100%; min-height:300px" "
											src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJF1gfEDkHU4gRKHGVkH07WGQ&key=AIzaSyBdg4p73nm890ZXt5-w8rriEkUz3SjljwM"
											allowfullscreen>
									</iframe>
								</div>
							</div>
						</div>
					</div>
				</li>
			</ul>
		</div>
	</div>
	<!--Perm Footer-->
	<footer class="page-footer" style="padding-top: 0px;">
		<div class="footer-copyright grey darken-3">
			<div class="container">
				<div class="row" style="margin-bottom:0px;">
					<div class="col s4 center">
						<!--Footer Modal Trigger-->
						<button data-target="footerModal" class="btn modal-trigger lime darken-3">About</button>
					</div>
					<div class="col s4 center">
						© 2017 Copyright Eric Wellman
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!--Script loader-->
	<script>
		$(document).ready(function () {
			$(".button-collapse").sideNav();
			$('.modal').modal();
			$('.modal-trigger').Modal();
		});
		@RenderSection("scripts", required: false)
	</script>
</body>
</html>
