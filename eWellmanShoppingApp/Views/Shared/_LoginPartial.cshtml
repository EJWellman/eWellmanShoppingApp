@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
		<li>
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-fw fa-search"></i></a>
			<ul class="dropdown-menu navFix dropdown-menu-right">
				<li>
					<form class="navbar-form">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search" />
							<div class="input-group-btn">
								<button type="submit" class="btn btn-default">Submit</button>
							</div>
						</div>
					</form>
				</li>
			</ul>
		</li>
		<li><a href="@Url.Action("Index","CartItems")"><i class="fa fa-fw fa-shopping-cart"></i></a></li>
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li style="margin-right:10px"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
		<li>
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-fw fa-search"></i></a>
			<ul class="dropdown-menu navFix dropdown-menu-right">
				<li>
					<form class="navbar-form">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Search" />
							<div class="input-group-btn">
								<button type="submit" class="btn btn-default">Submit</button>
							</div>
						</div>
					</form>
				</li>
			</ul>
		</li>
		<li><a href="@Url.Action("Index","CartItems")"><i class="fa fa-fw fa-shopping-cart"></i></a></li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li style="margin-right:10px">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
