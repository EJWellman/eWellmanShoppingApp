@model eWellmanShoppingApp.Models.CodeFirst.CartItem

@{
    ViewBag.Title = "Remove from Cart";
}

<h3>Are you sure you want to remove this from your cart?</h3>
<div class="divider">
</div>
<div>
	<table class="table">
		<tr>
			<th></th>
			<th>Item Name</th>
			<th>Price</th>
			<th>Count</th>
			<th>Total Unit Price</th>
		</tr>
		<tr>
			<td><img src="@Model.item.mediaURL" style="width:125px; height:125px;" /></td>
			<td>@Model.item.name</td>
			<td>@Model.item.price</td>
			<td>@Model.count</td>
			<td>@Model.unitTotal</td>
		</tr>
	</table>
</div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}