@model eWellmanShoppingApp.Models.CodeFirst.Item

@{
	ViewBag.Title = "Item Details";
}

<div style="display:inline-block;">
	<h4>@Model.name</h4>
	<div class="row">
		<div class="col m4">
			<img class="responsive-img" src="@Model.mediaURL"/>
		</div>
		<div class="col offset-m5 m3" @*style="margin-top:25px;"*@>
				<h4>$@Model.price</h4>
				@using (Html.BeginForm("Create", "CartItems", new { idIn = Model.id }, FormMethod.Post)) {
					@Html.AntiForgeryToken()
					<input type="submit" class="btn lime darken-3" value="Purchase" />
				}
		</div>
		<div class="col m10">
			<h5 class="flow-text">
				@Html.Raw(Model.desc)</h5>
		</div>
	</div>
</div>
@if (User.IsInRole("Admin")) {
	<div>
		<h4>Item</h4>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				@Html.DisplayNameFor(model => model.creationDate)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.creationDate)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.updatedDate)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.updatedDate)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.name)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.name)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.price)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.price)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.desc)
			</dt>

			<dd>
				@Html.Raw(Model.desc)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.mediaURL)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.mediaURL)
			</dd>

		</dl>
	</div>
	<p>
		@Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
		@Html.ActionLink("Back to List", "ItemAdd") |
		@Html.ActionLink("Customer View", "Index")
	</p>
}